<?xml version="1.0" encoding="utf-8"?>
<com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iv_media"
    fresco:actualImageScaleType="focusCrop"
    fresco:fadeDuration="300"
    fresco:failureImage="@mipmap/default_image"
    fresco:failureImageScaleType="centerCrop"
    fresco:placeholderImage="@mipmap/default_image"
    fresco:placeholderImageScaleType="centerCrop"
    fresco:pressedStateOverlayImage="@color/transparent_half"
    fresco:retryImage="@mipmap/default_image"
    fresco:retryImageScaleType="centerCrop"
    fresco:roundAsCircle="false"
    fresco:roundBottomLeft="false"
    fresco:roundBottomRight="true"
    fresco:roundTopLeft="true"
    fresco:roundTopRight="false"
    fresco:roundedCornerRadius="1dp"
    fresco:roundingBorderWidth="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />